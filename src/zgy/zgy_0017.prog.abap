REPORT zgy_0017.

PARAMETERS:p_num1 TYPE i,
           p_num2 TYPE i,
           rb1    RADIOBUTTON GROUP a,
           rb2    RADIOBUTTON GROUP a,
           rb3    RADIOBUTTON GROUP a,
           rb4    RADIOBUTTON GROUP a.
DATA:gv_result TYPE i.

START-OF-SELECTION.
  CASE abap_true.
    WHEN rb1.
      PERFORM topla.
    WHEN rb2.
      PERFORM cÄ±kar.
    WHEN rb3.
      PERFORM carp.
    WHEN rb4.
      PERFORM bol.
  ENDCASE.
*&---------------------------------------------------------------------*
*& Form TOPLA
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM topla .
  CLEAR:gv_result.
  gv_result = p_num1 + p_num2.
  WRITE:gv_result.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form CIKAR
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM cikar .
  CLEAR:gv_result.
  gv_result = p_num1 - p_num2.
  WRITE:gv_result.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form CARP
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM carp .
  CLEAR:gv_result.
  gv_result = p_num1 * p_num2.
  WRITE:gv_result.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form BOL
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM bol .
  CLEAR:gv_result.
  gv_result = p_num1 / p_num2.
  WRITE:gv_result.
ENDFORM.
