REPORT zgy_0019.
PARAMETERS:p_num1 TYPE i,
           p_num2 TYPE i,
           rb1    RADIOBUTTON GROUP a,
           rb2    RADIOBUTTON GROUP a,
           rb3    RADIOBUTTON GROUP a,
           rb4    RADIOBUTTON GROUP a,
           cb1    AS CHECKBOX,
           cb2    AS CHECKBOX.
DATA:gv_result TYPE i.

START-OF-SELECTION.
  CASE abap_true.
    WHEN rb1.
      PERFORM topla.
    WHEN rb2.
      PERFORM cÄ±kar.
    WHEN rb3.
      PERFORM carp.
    WHEN rb4.
      PERFORM bol.
  ENDCASE.

  IF cb1 EQ 'X'.
    PERFORM 10ilecarp.
  ENDIF.

  IF cb2 EQ 'X'.
    PERFORM 2yebol.
  ENDIF.


  WRITE:gv_result.
*&---------------------------------------------------------------------*
*& Form TOPLA
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM topla .
  gv_result = p_num1 + p_num2.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form CIKAR
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM cikar .
  gv_result = p_num1 - p_num2.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form CARP
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM carp .
  gv_result = p_num1 * p_num2.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form BOL
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM bol .
  gv_result = p_num1 / p_num2.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form 10ILECARP
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM 10ilecarp .
  gv_result = gv_result * 10.
ENDFORM.
*&---------------------------------------------------------------------*
*& Form 2YEBOL
*&---------------------------------------------------------------------*
*& text
*&---------------------------------------------------------------------*
*& -->  p1        text
*& <--  p2        text
*&---------------------------------------------------------------------*
FORM 2yebol .
  gv_result = gv_result / 2.
ENDFORM.
